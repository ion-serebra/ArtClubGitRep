<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/performanceImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:src="@drawable/ic_fitness_center_primary_24dp"></ImageView>

        <TextView
            android:id="@+id/performanceNameTextView"
            style="@style/PerformanceTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Мудрость: "></TextView>

        <TextView
            android:id="@+id/performanceValueTextView"
            style="@style/PerformanceTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="6dp"
            android:text=""></TextView>

    </LinearLayout>

</RelativeLayout>